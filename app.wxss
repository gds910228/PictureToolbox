/* ===================================
   CYBERPUNK IMAGE LAB - DESIGN SYSTEM
   =================================== */

/* 设计令牌 */
page {
  /* 核心色板 */
  --color-deep-space: #0A0E27;
  --color-neon-cyan: #00F0FF;
  --color-hot-magenta: #FF0080;
  --color-electric-purple: #B026FF;
  --color-solar-flare: #FF6B35;

  /* 中性色 */
  --color-white: #FFFFFF;
  --color-gray-100: #F8F9FA;
  --color-gray-200: #E9ECEF;
  --color-gray-500: #ADB5BD;
  --color-gray-800: #343A40;

  /* 渐变 */
  --gradient-primary: linear-gradient(135deg, #0A0E27 0%, #1A1F3A 100%);
  --gradient-neon: linear-gradient(135deg, #00F0FF 0%, #FF0080 100%);
  --gradient-heat: linear-gradient(135deg, #FF6B35 0%, #FF0080 100%);

  /* 阴影 */
  --shadow-neon: 0 0 20rpx rgba(0, 240, 255, 0.4), 0 0 40rpx rgba(0, 240, 255, 0.2);
  --shadow-magenta: 0 0 20rpx rgba(255, 0, 128, 0.4), 0 0 40rpx rgba(255, 0, 128, 0.2);
  --shadow-card: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);

  /* 字体 */
  --font-family-base: "Noto Sans SC", "PingFang SC", -apple-system, sans-serif;
  --font-family-display: "Orbitron", "Noto Sans SC", sans-serif;

  /* 间距 */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;

  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;

  background: var(--color-deep-space);
  font-family: var(--font-family-base);
  color: var(--color-white);
  -webkit-font-smoothing: antialiased;
}

/* 网格背景纹理 */
page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    linear-gradient(rgba(0, 240, 255, 0.03) 1rpx, transparent 1rpx),
    linear-gradient(90deg, rgba(0, 240, 255, 0.03) 1rpx, transparent 1rpx);
  background-size: 40rpx 40rpx;
  pointer-events: none;
  z-index: 0;
}

/* ===================================
   UTILITY CLASSES
   =================================== */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

.card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  border: 1rpx solid rgba(0, 240, 255, 0.1);
  box-shadow: var(--shadow-card);
}

/* ===================================
   TYPOGRAPHY
   =================================== */

.text-primary {
  color: var(--color-neon-cyan);
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

.text-secondary {
  color: var(--color-gray-500);
  font-size: 24rpx;
}

.text-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-white);
  margin-bottom: var(--space-sm);
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

/* ===================================
   BUTTONS
   =================================== */

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  box-shadow: var(--shadow-neon);
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.btn-primary:active::before {
  left: 100%;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 0 30rpx rgba(0, 240, 255, 0.6);
}

.btn-secondary {
  background: transparent;
  color: var(--color-neon-cyan);
  border: 2rpx solid var(--color-neon-cyan);
}

.btn-secondary:active {
  background: rgba(0, 240, 255, 0.1);
}

/* ===================================
   LAYOUT UTILITIES
   =================================== */

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* ===================================
   SPACING UTILITIES
   =================================== */

.mt-20 { margin-top: var(--space-sm); }
.mb-20 { margin-bottom: var(--space-sm); }
.p-20 { padding: var(--space-sm); }
