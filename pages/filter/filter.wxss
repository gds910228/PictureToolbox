/* pages/filter/filter.wxss */
.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 32rpx;
}

.upload-placeholder {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  position: relative;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 400rpx;
}

.reupload-btn {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

/* 区块 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.ai-icon {
  margin-right: 8rpx;
}

/* 滤镜类型选择 */
.type-selector {
  display: flex;
  gap: 12rpx;
}

.type-option {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-option.active {
  background-color: #e8f4ff;
  border-color: #4A90E2;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.type-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* AI智能增强 */
.ai-smart-type {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.radio-option {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.radio-option text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.ai-recommendations {
  margin-top: 20rpx;
}

.recommendation-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.recommendation-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.rec-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.rec-reason {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 预设滤镜 */
.preset-scroll {
  white-space: nowrap;
}

.preset-list {
  display: inline-flex;
  gap: 16rpx;
}

.preset-item {
  display: inline-block;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  text-align: center;
  border: 2rpx solid transparent;
  min-width: 120rpx;
}

.preset-item.active {
  background-color: #e8f4ff;
  border-color: #4A90E2;
}

.preset-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.preset-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 手动调节 */
.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-value {
  color: #4A90E2;
  font-weight: 600;
}

.form-slider {
  width: 100%;
}

.reset-btn {
  text-align: center;
  padding: 20rpx;
  color: #4A90E2;
  font-size: 28rpx;
  margin-top: 8rpx;
}

/* AI风格 */
.ai-styles {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ai-style-item {
  position: relative;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  border: 3rpx solid transparent;
}

.ai-style-item.active {
  border-color: #fff;
}

.ai-style-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.ai-style-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.ai-style-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.ai-tip {
  background-color: #fff8e1;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.ai-tip text:last-child {
  font-size: 24rpx;
  color: #f57c00;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 32rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn[disabled] {
  background: linear-gradient(135deg, #ccc 0%, #999 100%);
  color: #fff;
}

/* 结果展示 */
.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.result-preview {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.result-preview image {
  width: 100%;
  height: 400rpx;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.result-btn {
  flex: 1;
  height: 80rpx;
  background-color: #4A90E2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}
