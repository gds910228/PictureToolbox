/* ===================================
   CYBERPUNK FILTER PAGE - PURPLE THEME
   =================================== */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  background: transparent;
}

/* ===================================
   UPLOAD SECTION
   =================================== */

.upload-section {
  margin-bottom: var(--space-lg);
}

.upload-placeholder {
  background: rgba(176, 38, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed rgba(176, 38, 255, 0.3);
}

.upload-icon {
  font-size: 88rpx;
  margin-bottom: var(--space-md);
  filter: drop-shadow(0 0 20rpx rgba(176, 38, 255, 0.6));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.upload-text {
  font-size: 32rpx;
  color: var(--color-white);
  font-weight: 600;
  margin-bottom: var(--space-xs);
  letter-spacing: 2rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: var(--color-gray-500);
}

.image-preview {
  position: relative;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-lg);
  overflow: hidden;
  border: 2rpx solid rgba(176, 38, 255, 0.2);
}

.image-preview image {
  width: 100%;
  height: 400rpx;
}

.reupload-btn {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  border: 1rpx solid var(--color-electric-purple);
}

/* ===================================
   SECTIONS
   =================================== */

.section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(176, 38, 255, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-white);
  margin-bottom: var(--space-md);
  display: flex;
  align-items: center;
  letter-spacing: 2rpx;
}

.ai-icon {
  margin-right: var(--space-sm);
  filter: drop-shadow(0 0 10rpx rgba(176, 38, 255, 0.6));
}

/* ===================================
   TYPE SELECTOR
   =================================== */

.type-selector {
  display: flex;
  gap: var(--space-md);
}

.type-option {
  flex: 1;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  padding: var(--space-md) 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-option.active {
  background: rgba(176, 38, 255, 0.1);
  border-color: var(--color-electric-purple);
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.type-name {
  font-size: 24rpx;
  color: var(--color-white);
  font-weight: 600;
}

/* ===================================
   AI RECOMMENDATIONS
   =================================== */

.recommendation-item {
  background: linear-gradient(135deg, rgba(176, 38, 255, 0.3), rgba(255, 0, 128, 0.3));
  backdrop-filter: blur(10px);
  color: #fff;
  padding: var(--space-md);
  border-radius: var(--radius-md);
  margin-bottom: var(--space-sm);
  border: 1rpx solid rgba(176, 38, 255, 0.3);
}

.rec-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.rec-reason {
  font-size: 24rpx;
  opacity: 0.9;
}

/* ===================================
   PRESET SCROLL
   =================================== */

.preset-scroll {
  white-space: nowrap;
}

.preset-list {
  display: inline-flex;
  gap: var(--space-md);
}

.preset-item {
  display: inline-block;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  padding: var(--space-sm) var(--space-md);
  text-align: center;
  border: 2rpx solid transparent;
  min-width: 120rpx;
}

.preset-item.active {
  background: rgba(176, 38, 255, 0.1);
  border-color: var(--color-electric-purple);
}

.preset-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.preset-name {
  font-size: 24rpx;
  color: var(--color-white);
  font-weight: 600;
}

/* ===================================
   FORM ITEMS
   =================================== */

.form-item {
  margin-bottom: var(--space-lg);
}

.form-label {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--color-white);
  margin-bottom: var(--space-sm);
  font-weight: 600;
}

.form-value {
  color: var(--color-electric-purple);
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(176, 38, 255, 0.5);
}

.form-slider {
  width: 100%;
}

.reset-btn {
  text-align: center;
  padding: var(--space-md);
  color: var(--color-electric-purple);
  font-size: 28rpx;
  margin-top: var(--space-sm);
}

/* ===================================
   AI STYLES
   =================================== */

.ai-style-item {
  position: relative;
  background: linear-gradient(135deg, rgba(176, 38, 255, 0.3), rgba(255, 0, 128, 0.3));
  backdrop-filter: blur(10px);
  color: #fff;
  padding: var(--space-md);
  border-radius: var(--radius-md);
  border: 3rpx solid transparent;
}

.ai-style-item.active {
  border-color: #fff;
  box-shadow: 0 0 20rpx rgba(176, 38, 255, 0.5);
}

.ai-style-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.ai-style-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.ai-style-badge {
  position: absolute;
  top: var(--space-sm);
  right: var(--space-sm);
  background: rgba(255, 255, 255, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.ai-tip {
  background: rgba(255, 107, 53, 0.1);
  border-radius: var(--radius-sm);
  padding: var(--space-sm);
  margin-top: var(--space-md);
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 107, 53, 0.3);
}

.tip-icon {
  font-size: 32rpx;
  margin-right: var(--space-sm);
}

.ai-tip text:last-child {
  font-size: 24rpx;
  color: var(--color-solar-flare);
}

/* ===================================
   ACTION BUTTONS
   =================================== */

.action-buttons {
  margin-bottom: var(--space-lg);
}

.action-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  letter-spacing: 2rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #B026FF, #FF0080);
  color: #fff;
  box-shadow: 0 0 20rpx rgba(176, 38, 255, 0.4);
}

.action-btn[disabled] {
  background: rgba(255, 255, 255, 0.1);
  color: var(--color-gray-500);
}

/* ===================================
   RESULT SECTION
   =================================== */

.result-section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(176, 38, 255, 0.1);
}

.result-preview {
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: var(--space-md);
}

.result-preview image {
  width: 100%;
  height: 400rpx;
}

.result-actions {
  display: flex;
  gap: var(--space-md);
}

.result-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #B026FF, #FF0080);
  color: #fff;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  border: none;
  font-weight: 600;
}
