/* ===================================
   CYBERPUNK CONVERT PAGE
   =================================== */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  background: transparent;
}

/* ===================================
   UPLOAD SECTION - NEON CYAN
   =================================== */

.upload-section {
  margin-bottom: var(--space-lg);
}

.upload-box {
  background: rgba(0, 240, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: 80rpx 40rpx;
  text-align: center;
  border: 2rpx dashed rgba(0, 240, 255, 0.3);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.upload-box::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(0, 240, 255, 0.05) 50%,
    transparent 70%
  );
  animation: scan 3s linear infinite;
}

@keyframes scan {
  0% { transform: translateY(-50%) rotate(0deg); }
  100% { transform: translateY(-50%) rotate(360deg); }
}

.upload-box:active {
  border-color: var(--color-neon-cyan);
  background: rgba(0, 240, 255, 0.08);
  box-shadow: var(--shadow-neon);
}

.upload-icon {
  display: block;
  font-size: 88rpx;
  margin-bottom: var(--space-md);
  filter: drop-shadow(0 0 20rpx rgba(0, 240, 255, 0.6));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: var(--color-white);
  margin-bottom: var(--space-sm);
  font-weight: 600;
  letter-spacing: 2rpx;
}

.upload-hint {
  display: block;
  font-size: 24rpx;
  color: var(--color-gray-500);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  margin-top: var(--space-md);
  border-radius: var(--radius-lg);
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(0, 240, 255, 0.2);
  box-shadow: var(--shadow-neon);
}

.format-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: var(--space-md);
  padding: var(--space-md);
  background: rgba(0, 240, 255, 0.1);
  border-radius: var(--radius-md);
  border: 1rpx solid rgba(0, 240, 255, 0.2);
}

.format-label {
  font-size: 28rpx;
  color: var(--color-gray-300);
  margin-right: var(--space-sm);
}

.format-value {
  font-size: 32rpx;
  color: var(--color-neon-cyan);
  font-weight: 700;
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

/* ===================================
   FORMAT SECTION - SELECTION GRID
   =================================== */

.format-section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 240, 255, 0.1);
}

.section-title {
  font-size: 28rpx;
  color: var(--color-white);
  margin-bottom: var(--space-md);
  font-weight: 600;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.format-list {
  display: flex;
  gap: var(--space-md);
}

.format-item {
  flex: 1;
  padding: var(--space-lg) var(--space-md);
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  color: var(--color-gray-500);
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid transparent;
}

.format-item:active {
  transform: scale(0.95);
}

.format-item.active {
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
}

.format-name {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: var(--space-xs);
}

.format-desc {
  font-size: 22rpx;
  line-height: 1.3;
}

.format-item.active .format-desc {
  color: rgba(10, 14, 39, 0.7);
}

/* ===================================
   BUTTONS - CYAN NEON
   =================================== */

.btn-primary,
.btn-secondary {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: var(--space-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 2rpx;
}

.btn-primary {
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  box-shadow: var(--shadow-neon);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 0 40rpx rgba(0, 240, 255, 0.8);
}

.btn-secondary {
  background: transparent;
  color: var(--color-neon-cyan);
  border: 2rpx solid var(--color-neon-cyan);
}

.btn-secondary:active {
  background: rgba(0, 240, 255, 0.1);
  box-shadow: var(--shadow-neon);
}

/* ===================================
   RESULT SECTION
   =================================== */

.result-section {
  margin-top: var(--space-lg);
}

.result-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-white);
  margin-bottom: var(--space-lg);
  letter-spacing: 4rpx;
  text-transform: uppercase;
  text-shadow: 0 0 20rpx rgba(0, 240, 255, 0.5);
}

.image-display {
  margin-bottom: var(--space-lg);
}

.result-image {
  width: 100%;
  height: 400rpx;
  border-radius: var(--radius-lg);
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(0, 240, 255, 0.2);
}

.result-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-lg);
  gap: var(--space-md);
}

.result-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(10px);
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  text-align: center;
  border: 1rpx solid rgba(0, 240, 255, 0.15);
}

.result-card.highlight {
  background: var(--gradient-neon);
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
}

.result-card.highlight .result-label {
  color: rgba(10, 14, 39, 0.8);
}

.result-card.highlight .result-format {
  color: var(--color-deep-space);
}

.result-label {
  display: block;
  font-size: 24rpx;
  margin-bottom: var(--space-sm);
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.result-format {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-neon-cyan);
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

.result-arrow {
  font-size: 48rpx;
  color: var(--color-neon-cyan);
  margin: 0 var(--space-md);
  text-shadow: 0 0 15rpx rgba(0, 240, 255, 0.8);
}

/* ===================================
   FORMAT NOTE - INFO CARDS
   =================================== */

.format-note {
  background: rgba(255, 107, 53, 0.1);
  border-left: 4rpx solid var(--color-solar-flare);
  border-radius: var(--radius-sm);
  padding: var(--space-md);
  margin-bottom: var(--space-md);
  display: flex;
  align-items: flex-start;
  gap: var(--space-sm);
}

.note-icon {
  font-size: 32rpx;
  line-height: 1.4;
}

.note-text {
  flex: 1;
  font-size: 24rpx;
  color: var(--color-gray-200);
  line-height: 1.5;
}
