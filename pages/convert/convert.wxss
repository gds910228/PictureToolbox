/* pages/convert/convert.wxss */

.container {
  min-height: 100vh;
  padding: 30rpx;
  background: #f5f5f5;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.format-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.format-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.format-value {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 600;
}

/* 格式选择 */
.format-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.format-list {
  display: flex;
  gap: 20rpx;
}

.format-item {
  flex: 1;
  padding: 30rpx 20rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  color: #666;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.format-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.format-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.3;
}

.format-item.active {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
}

.format-item.active .format-desc {
  color: rgba(255, 255, 255, 0.8);
}

/* 按钮 */
.btn-primary,
.btn-secondary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  background: #fff;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
}

.btn-secondary:active {
  background: #f0f0f0;
}

/* 结果区域 */
.result-section {
  margin-top: 40rpx;
}

.result-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.image-display {
  margin-bottom: 30rpx;
}

.result-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.result-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.result-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
}

.result-card.highlight {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
}

.result-card.highlight .result-label {
  color: rgba(255, 255, 255, 0.8);
}

.result-card.highlight .result-format {
  color: #fff;
}

.result-label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.result-format {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #4A90E2;
}

.result-arrow {
  font-size: 48rpx;
  color: #4A90E2;
  margin: 0 20rpx;
}

.format-note {
  background: #fff9e6;
  border-left: 4rpx solid #ffa940;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.note-icon {
  font-size: 32rpx;
  line-height: 1.4;
}

.note-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}
