/* pages/splice/splice.wxss */
.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 区块 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
}

.clear-btn {
  color: #FF6B6B;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background-color: #ffe5e5;
}

.ai-icon {
  margin-right: 8rpx;
}

/* 图片网格 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
}

.image-index {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(74, 144, 226, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
}

.add-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  background-color: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 22rpx;
  color: #999;
}

/* 拼接模式 */
.mode-selector {
  display: flex;
  gap: 12rpx;
}

.mode-option {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.mode-option.active {
  background-color: #e8f4ff;
  border-color: #4A90E2;
}

.mode-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.mode-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* AI智能布局 */
.ai-analyzing {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 26rpx;
}

.ai-suggestion-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 600;
}

.suggestion-content {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  opacity: 0.95;
}

.suggestion-actions {
  display: flex;
  gap: 12rpx;
}

.apply-suggestion-btn,
.reanalyze-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
}

.apply-suggestion-btn {
  background-color: #fff;
  color: #667eea;
}

.reanalyze-btn {
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
}

.ai-empty {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
  font-size: 26rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-value {
  color: #4A90E2;
  font-weight: 600;
}

.form-slider {
  width: 100%;
}

/* 网格设置 */
.grid-setting {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 12rpx;
}

.grid-input-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.grid-input {
  width: 80rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}

.grid-separator {
  font-size: 32rpx;
  color: #999;
  font-weight: 600;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  gap: 16rpx;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  border: 3rpx solid transparent;
  position: relative;
}

.color-option.active {
  border-color: #4A90E2;
}

/* 背景图片 */
.background-image-section {
  margin-top: 12rpx;
}

.upload-bg-btn {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 32rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.bg-image-preview {
  position: relative;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.bg-image-preview image {
  width: 100%;
  height: 120rpx;
}

.clear-bg-btn {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 32rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn[disabled] {
  background: linear-gradient(135deg, #ccc 0%, #999 100%);
  color: #fff;
}

/* 结果展示 */
.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.result-preview {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.result-preview image {
  width: 100%;
  display: block;
}

.result-info {
  text-align: center;
  padding: 16rpx;
  color: #999;
  font-size: 24rpx;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.result-btn {
  flex: 1;
  height: 80rpx;
  background-color: #4A90E2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 使用提示 */
.tips-section {
  background-color: #fff9e6;
  border-radius: 16rpx;
  padding: 32rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
