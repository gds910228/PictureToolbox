/* ===================================
   CYBERPUNK SPLICE PAGE - GREEN THEME
   =================================== */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  background: transparent;
}

/* ===================================
   SECTIONS
   =================================== */

.section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 255, 136, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-white);
  display: flex;
  align-items: center;
  letter-spacing: 2rpx;
}

.clear-btn {
  color: #FF6B6B;
  font-size: 26rpx;
  padding: var(--space-xs) var(--space-md);
  border-radius: 20rpx;
  background: rgba(255, 107, 107, 0.1);
  border: 1rpx solid rgba(255, 107, 107, 0.3);
}

.ai-icon {
  margin-right: var(--space-sm);
  filter: drop-shadow(0 0 10rpx rgba(0, 255, 136, 0.6));
}

/* ===================================
   IMAGES GRID
   =================================== */

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-sm);
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  overflow: hidden;
  border: 2rpx solid rgba(0, 255, 136, 0.2);
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: var(--space-sm);
  right: var(--space-sm);
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
  border: 1rpx solid rgba(255, 107, 107, 0.5);
}

.image-index {
  position: absolute;
  top: var(--space-sm);
  left: var(--space-sm);
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 255, 136, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 20rpx;
  font-weight: 700;
}

.add-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed rgba(0, 255, 136, 0.3);
  background: rgba(0, 255, 136, 0.03);
}

.add-icon {
  font-size: 60rpx;
  color: var(--color-gray-500);
  line-height: 1;
  margin-bottom: var(--space-xs);
}

.add-text {
  font-size: 22rpx;
  color: var(--color-gray-500);
}

/* ===================================
   MODE SELECTOR
   =================================== */

.mode-selector {
  display: flex;
  gap: var(--space-sm);
}

.mode-option {
  flex: 1;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  padding: var(--space-md) 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.mode-option.active {
  background: rgba(0, 255, 136, 0.1);
  border-color: #00ff88;
}

.mode-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.mode-name {
  font-size: 24rpx;
  color: var(--color-white);
  font-weight: 600;
}

/* ===================================
   AI SUGGESTION
   =================================== */

.ai-analyzing {
  text-align: center;
  padding: var(--space-xl);
  color: var(--color-gray-400);
  font-size: 26rpx;
}

.ai-suggestion-card {
  background: linear-gradient(135deg, rgba(0, 255, 136, 0.2), rgba(0, 240, 255, 0.2));
  backdrop-filter: blur(10px);
  color: #fff;
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  border: 1rpx solid rgba(0, 255, 136, 0.3);
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-sm);
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: var(--space-sm);
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 600;
}

.suggestion-content {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: var(--space-lg);
  opacity: 0.95;
}

.suggestion-actions {
  display: flex;
  gap: var(--space-sm);
}

.apply-suggestion-btn,
.reanalyze-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: var(--radius-md);
  font-size: 26rpx;
  border: none;
  font-weight: 600;
}

.apply-suggestion-btn {
  background: var(--color-neon-cyan);
  color: var(--color-deep-space);
}

.reanalyze-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

/* ===================================
   FORM ITEMS
   =================================== */

.form-item {
  margin-bottom: var(--space-lg);
}

.form-label {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--color-white);
  margin-bottom: var(--space-sm);
  font-weight: 600;
}

.form-value {
  color: #00ff88;
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(0, 255, 136, 0.5);
}

.form-slider {
  width: 100%;
}

/* ===================================
   GRID SETTINGS
   =================================== */

.grid-setting {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-md);
  background: rgba(0, 0, 0, 0.3);
  padding: var(--space-md);
  border-radius: var(--radius-md);
}

.grid-input-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-label {
  font-size: 22rpx;
  color: var(--color-gray-500);
  margin-bottom: var(--space-xs);
}

.grid-input {
  width: 80rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: var(--radius-sm);
  text-align: center;
  font-size: 28rpx;
  border: 2rpx solid rgba(0, 255, 136, 0.2);
  color: var(--color-white);
  font-weight: 600;
}

.grid-separator {
  font-size: 32rpx;
  color: #00ff88;
  font-weight: 600;
}

/* ===================================
   COLOR PICKER
   =================================== */

.color-picker {
  display: flex;
  gap: var(--space-md);
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-sm);
  border: 3rpx solid transparent;
  position: relative;
}

.color-option.active {
  border-color: #00ff88;
  box-shadow: 0 0 15rpx rgba(0, 255, 136, 0.6);
}

/* ===================================
   ACTION BUTTONS
   =================================== */

.action-buttons {
  margin-bottom: var(--space-lg);
}

.action-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  letter-spacing: 2rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #00ff88, #00F0FF);
  color: var(--color-deep-space);
  box-shadow: 0 0 20rpx rgba(0, 255, 136, 0.4);
}

.action-btn[disabled] {
  background: rgba(255, 255, 255, 0.1);
  color: var(--color-gray-500);
}

/* ===================================
   RESULT SECTION
   =================================== */

.result-section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 255, 136, 0.1);
}

.result-preview {
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: var(--space-md);
}

.result-preview image {
  width: 100%;
  display: block;
}

.result-info {
  text-align: center;
  padding: var(--space-md);
  color: var(--color-gray-500);
  font-size: 24rpx;
}

.result-actions {
  display: flex;
  gap: var(--space-md);
}

.result-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #00ff88, #00F0FF);
  color: var(--color-deep-space);
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  border: none;
  font-weight: 600;
}

/* ===================================
   TIPS SECTION
   =================================== */

.tips-section {
  background: rgba(255, 107, 53, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  border: 1rpx solid rgba(255, 107, 53, 0.2);
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: var(--space-md);
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--color-gray-200);
  line-height: 1.5;
}
