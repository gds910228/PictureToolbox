/* ===================================
   CYBERPUNK COMPRESS PAGE
   =================================== */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  background: transparent;
}

/* ===================================
   UPLOAD SECTION - HOLOGRAPHIC EFFECT
   =================================== */

.upload-section {
  margin-bottom: var(--space-lg);
}

.upload-box {
  background: rgba(0, 240, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: 80rpx 40rpx;
  text-align: center;
  border: 2rpx dashed rgba(0, 240, 255, 0.3);
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.upload-box::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(0, 240, 255, 0.05) 50%,
    transparent 70%
  );
  animation: scan 3s linear infinite;
}

@keyframes scan {
  0% { transform: translateY(-50%) rotate(0deg); }
  100% { transform: translateY(-50%) rotate(360deg); }
}

.upload-box:active {
  border-color: var(--color-neon-cyan);
  background: rgba(0, 240, 255, 0.08);
  box-shadow: var(--shadow-neon);
}

.upload-icon {
  display: block;
  font-size: 88rpx;
  margin-bottom: var(--space-md);
  filter: drop-shadow(0 0 20rpx rgba(0, 240, 255, 0.6));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: var(--color-white);
  margin-bottom: var(--space-sm);
  font-weight: 600;
  letter-spacing: 2rpx;
}

.upload-hint {
  display: block;
  font-size: 24rpx;
  color: var(--color-gray-500);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  margin-top: var(--space-md);
  border-radius: var(--radius-lg);
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(0, 240, 255, 0.2);
  box-shadow: var(--shadow-neon);
}

/* ===================================
   SETTINGS SECTION - GLASSMORPHISM
   =================================== */

.settings-section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 240, 255, 0.1);
}

.setting-item {
  margin-bottom: var(--space-lg);
  padding-bottom: var(--space-lg);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.setting-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.setting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-sm);
}

.setting-label {
  display: block;
  font-size: 28rpx;
  color: var(--color-white);
  margin-bottom: var(--space-sm);
  font-weight: 600;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.setting-hint {
  display: block;
  font-size: 22rpx;
  color: var(--color-gray-500);
  line-height: 1.5;
  margin-top: var(--space-sm);
}

.switch {
  transform: scale(0.9);
}

.slider-wrapper {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.slider {
  flex: 1;
}

.slider-value {
  font-size: 32rpx;
  color: var(--color-neon-cyan);
  font-weight: 700;
  min-width: 100rpx;
  text-align: right;
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.size-input {
  flex: 1;
  height: 88rpx;
  padding: 0 var(--space-md);
  background: rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(0, 240, 255, 0.2);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  color: var(--color-white);
  transition: all 0.3s;
}

.size-input:focus {
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
}

.input-unit {
  width: 60rpx;
  font-size: 26rpx;
  color: var(--color-gray-500);
  font-weight: 600;
}

.info-card {
  background: rgba(0, 240, 255, 0.05);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  border: 1rpx solid rgba(0, 240, 255, 0.15);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: var(--color-gray-500);
}

.info-value {
  font-size: 28rpx;
  color: var(--color-neon-cyan);
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

/* ===================================
   BUTTONS - NEON GLOW
   =================================== */

.btn-primary,
.btn-secondary {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: var(--space-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 2rpx;
}

.btn-primary {
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  box-shadow: var(--shadow-neon);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 0 40rpx rgba(0, 240, 255, 0.8);
}

.btn-secondary {
  background: transparent;
  color: var(--color-neon-cyan);
  border: 2rpx solid var(--color-neon-cyan);
}

.btn-secondary:active {
  background: rgba(0, 240, 255, 0.1);
  box-shadow: var(--shadow-neon);
}

/* ===================================
   RESULT SECTION - DATA VISUALIZATION
   =================================== */

.result-section {
  margin-top: var(--space-lg);
}

.result-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-white);
  margin-bottom: var(--space-lg);
  letter-spacing: 4rpx;
  text-transform: uppercase;
  text-shadow: 0 0 20rpx rgba(0, 240, 255, 0.5);
}

.image-comparison {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--space-lg);
  gap: var(--space-md);
}

.image-item {
  flex: 1;
  text-align: center;
}

.result-image {
  width: 100%;
  height: 300rpx;
  border-radius: var(--radius-md);
  background: rgba(0, 0, 0, 0.3);
  margin-bottom: var(--space-sm);
  border: 2rpx solid rgba(0, 240, 255, 0.2);
}

.image-label {
  font-size: 24rpx;
  color: var(--color-gray-500);
  letter-spacing: 1rpx;
}

.result-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--space-lg);
  gap: var(--space-sm);
}

.result-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(10px);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  text-align: center;
  border: 1rpx solid rgba(0, 240, 255, 0.15);
  transition: all 0.3s;
}

.result-card.highlight {
  background: var(--gradient-neon);
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
  transform: scale(1.05);
}

.result-card.highlight .result-label {
  color: rgba(10, 14, 39, 0.8);
}

.result-card.highlight .result-size {
  color: var(--color-deep-space);
}

.result-label {
  display: block;
  font-size: 22rpx;
  margin-bottom: var(--space-sm);
  color: var(--color-gray-500);
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.result-size {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-neon-cyan);
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

/* ===================================
   AI CARD - FUTURISTIC DASHBOARD
   =================================== */

.ai-card {
  background: linear-gradient(135deg, rgba(0, 240, 255, 0.15) 0%, rgba(255, 0, 128, 0.15) 100%);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 240, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 240, 255, 0.15);
  position: relative;
  overflow: hidden;
}

.ai-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: var(--gradient-neon);
  animation: glowPulse 2s ease-in-out infinite;
}

@keyframes glowPulse {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-md);
}

.ai-icon {
  font-size: 40rpx;
  margin-right: var(--space-sm);
  filter: drop-shadow(0 0 10rpx rgba(0, 240, 255, 0.6));
}

.ai-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--color-white);
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.ai-badge {
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  box-shadow: 0 0 15rpx rgba(0, 240, 255, 0.5);
}

.ai-content {
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  border: 1rpx solid rgba(0, 240, 255, 0.1);
}

.ai-reason {
  display: block;
  font-size: 24rpx;
  color: var(--color-gray-200);
  line-height: 1.6;
  margin-bottom: var(--space-sm);
}

.ai-suggestion {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: var(--space-sm) 0;
  padding: var(--space-sm);
  background: rgba(0, 240, 255, 0.1);
  border-radius: var(--radius-sm);
  border: 1rpx solid rgba(0, 240, 255, 0.2);
}

.ai-label {
  font-size: 22rpx;
  color: var(--color-gray-300);
}

.ai-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-neon-cyan);
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

.ai-tips {
  display: block;
  font-size: 20rpx;
  color: var(--color-gray-500);
  line-height: 1.5;
  margin-top: var(--space-sm);
  font-style: italic;
}
