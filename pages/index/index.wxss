/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  text-align: center;
  padding: 60rpx 0 80rpx;
  color: #fff;
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 工具网格 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.tool-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 280rpx;
}

.tool-card:active {
  transform: scale(0.98);
}

.tool-card.disabled {
  opacity: 0.6;
}

.tool-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.tool-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tool-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: #f0f0f0;
  color: #999;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 特性说明 */
.features {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #fff;
}

/* 底部 */
.footer {
  text-align: center;
  padding: 40rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
