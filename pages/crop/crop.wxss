/* pages/crop/crop.wxss */

.container {
  min-height: 100vh;
  padding: 30rpx;
  background: #f5f5f5;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  border: 2rpx dashed #ddd;
}

.upload-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: #333;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.image-info {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  padding: 15rpx;
  background: rgba(74, 144, 226, 0.1);
  border-radius: 12rpx;
}

.info-text {
  font-size: 24rpx;
  color: #4A90E2;
}

/* 模式选择 */
.mode-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.mode-tabs {
  display: flex;
  gap: 15rpx;
}

.mode-tab {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.mode-tab.active {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
}

/* 像素裁剪 */
.pixel-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.pixel-input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pixel-input-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.pixel-label {
  width: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.pixel-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.pixel-unit {
  width: 60rpx;
  font-size: 28rpx;
  color: #999;
}

/* 比例选择 */
.ratio-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.ratio-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.ratio-item {
  flex: 1;
  min-width: 140rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ratio-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.ratio-desc {
  font-size: 20rpx;
  color: #999;
  line-height: 1.2;
}

.ratio-item.active {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
}

.ratio-item.active .ratio-desc {
  color: rgba(255, 255, 255, 0.8);
}

/* 自定义比例输入 */
.custom-ratio-input {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.ratio-input-group {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.ratio-input {
  width: 200rpx;
  height: 80rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
}

.ratio-separator {
  font-size: 40rpx;
  color: #666;
  margin: 0 20rpx;
  font-weight: 600;
}

.ratio-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 按钮 */
.btn-primary,
.btn-secondary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-secondary {
  background: #fff;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
}

.btn-secondary:active {
  background: #f0f0f0;
}

/* 结果区域 */
.result-section {
  margin-top: 40rpx;
}

.result-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.image-comparison {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.image-item {
  width: 48%;
  text-align: center;
}

.result-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  background: #f0f0f0;
  margin-bottom: 10rpx;
}

.image-label {
  font-size: 24rpx;
  color: #666;
}
