/* ===================================
   CYBERPUNK WATERMARK PAGE
   =================================== */

.container {
  min-height: 100vh;
  padding: var(--space-lg);
  background: transparent;
}

/* ===================================
   UPLOAD SECTION
   =================================== */

.upload-section {
  margin-bottom: var(--space-lg);
}

.upload-placeholder {
  background: rgba(0, 240, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed rgba(0, 240, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.upload-placeholder::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(0, 240, 255, 0.05) 50%,
    transparent 70%
  );
  animation: scan 3s linear infinite;
}

@keyframes scan {
  0% { transform: translateY(-50%) rotate(0deg); }
  100% { transform: translateY(-50%) rotate(360deg); }
}

.upload-icon {
  font-size: 88rpx;
  margin-bottom: var(--space-md);
  filter: drop-shadow(0 0 20rpx rgba(0, 240, 255, 0.6));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.upload-text {
  font-size: 32rpx;
  color: var(--color-white);
  font-weight: 600;
  margin-bottom: var(--space-xs);
  letter-spacing: 2rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: var(--color-gray-500);
}

.image-preview {
  position: relative;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-lg);
  overflow: hidden;
  border: 2rpx solid rgba(0, 240, 255, 0.2);
}

.image-preview image {
  width: 100%;
  height: 400rpx;
}

.reupload-btn {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  border: 1rpx solid var(--color-neon-cyan);
}

/* ===================================
   SECTIONS - GLASSMORPHISM
   =================================== */

.section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 240, 255, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-white);
  margin-bottom: var(--space-md);
  display: flex;
  align-items: center;
  letter-spacing: 2rpx;
}

.ai-icon {
  margin-right: var(--space-sm);
  filter: drop-shadow(0 0 10rpx rgba(0, 240, 255, 0.6));
}

.section-desc {
  font-size: 22rpx;
  color: var(--color-gray-500);
  margin-top: -var(--space-sm);
}

.ai-generate-btn {
  margin-left: auto;
  font-size: 24rpx;
  color: var(--color-neon-cyan);
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(0, 240, 255, 0.5);
}

/* ===================================
   TYPE SELECTOR
   =================================== */

.type-selector {
  display: flex;
  gap: var(--space-md);
}

.type-option {
  flex: 1;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  padding: var(--space-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-option.active {
  background: rgba(0, 240, 255, 0.1);
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: var(--space-sm);
}

.type-name {
  font-size: 28rpx;
  color: var(--color-white);
  font-weight: 600;
}

/* ===================================
   MODE SELECTOR
   =================================== */

.mode-selector {
  display: flex;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

.mode-option {
  flex: 1;
  min-width: 140rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-sm);
  padding: var(--space-sm) 12rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.mode-option.active {
  background: rgba(0, 240, 255, 0.1);
  border-color: var(--color-neon-cyan);
}

.mode-name {
  font-size: 26rpx;
  color: var(--color-white);
  font-weight: 600;
}

.mode-desc {
  margin-top: var(--space-sm);
  font-size: 22rpx;
  color: var(--color-gray-500);
  text-align: center;
}

/* ===================================
   AI SUGGESTIONS
   =================================== */

.ai-suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
}

.suggestion-tag {
  background: rgba(0, 240, 255, 0.1);
  color: var(--color-neon-cyan);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: 1rpx solid var(--color-neon-cyan);
}

/* ===================================
   FORM ITEMS
   =================================== */

.form-item {
  margin-bottom: var(--space-lg);
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--color-white);
  margin-bottom: var(--space-md);
  font-weight: 600;
}

.form-input {
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: var(--color-white);
  border: 2rpx solid rgba(0, 240, 255, 0.2);
}

.form-input:focus {
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
}

/* ===================================
   COLOR PICKER
   =================================== */

.color-picker {
  display: flex;
  gap: var(--space-md);
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-sm);
  border: 3rpx solid transparent;
  position: relative;
}

.color-option.active {
  border-color: var(--color-neon-cyan);
  box-shadow: 0 0 15rpx rgba(0, 240, 255, 0.6);
}

/* ===================================
   POSITION GRID
   =================================== */

.position-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-sm);
  margin-top: var(--space-md);
}

.position-cell {
  aspect-ratio: 1;
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--color-neon-cyan);
  border: 2rpx solid transparent;
}

.position-cell.active {
  background: rgba(0, 240, 255, 0.1);
  border-color: var(--color-neon-cyan);
  box-shadow: var(--shadow-neon);
}

/* ===================================
   ACTION BUTTONS
   =================================== */

.action-buttons {
  margin-bottom: var(--space-lg);
}

.action-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  letter-spacing: 2rpx;
}

.action-btn.primary {
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  box-shadow: var(--shadow-neon);
}

.action-btn[disabled] {
  background: rgba(255, 255, 255, 0.1);
  color: var(--color-gray-500);
}

/* ===================================
   RESULT SECTION
   =================================== */

.result-section {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  border: 1rpx solid rgba(0, 240, 255, 0.1);
}

.result-preview {
  background: rgba(0, 0, 0, 0.3);
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: var(--space-md);
}

.result-preview image {
  width: 100%;
  height: 400rpx;
}

.result-actions {
  display: flex;
  gap: var(--space-md);
}

.result-btn {
  flex: 1;
  height: 88rpx;
  background: var(--gradient-neon);
  color: var(--color-deep-space);
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  border: none;
  font-weight: 600;
}
